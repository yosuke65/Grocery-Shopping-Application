<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_layout"
    android:background="@drawable/anim_gradient">
    <ImageView
        android:id="@+id/image_view_splash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_shopping_cart_242"
        />
    <TextView
        android:id="@+id/text_view_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:layout_below="@+id/image_view_splash"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_view_project_name"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/splash_loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>



</RelativeLayout>