<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_product"
        android:layout_width="90dp"
        android:layout_height="90dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/image_view_product"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$0.00" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp">

                            <TextView
                                android:id="@+id/text_view_product_mrt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="$0.00" />

                            <View
                                android:layout_width="40dp"
                                android:layout_height="1dp"
                                android:layout_centerInParent="true"
                                android:background="@android:color/darker_gray" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/text_view_product_saved"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save $0.00"
                            android:textColor="@android:color/holo_red_light" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/button_add"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_add"
                    android:drawableStart="@drawable/ic_baseline_add_24"
                    android:drawablePadding="-20dp"
                    android:text="Add"

                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:id="@+id/button_increment_decrement"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:visibility="invisible">

                    <com.example.project1.models.SquareButton
                        android:id="@+id/button_increment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_increment" />

                    <com.example.project1.models.SquareTextView
                        android:id="@+id/text_view_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="22dp" />

                    <com.example.project1.models.SquareButton
                        android:id="@+id/button_decrement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_decrement" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>