<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_success"
            android:textSize="24dp"
            android:textColor="@color/darkGrey4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thank_you"
            android:textSize="24dp"
            android:textColor="@color/darkGrey4"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/add_address_marginTop"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_login_register_button"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
</RelativeLayout>