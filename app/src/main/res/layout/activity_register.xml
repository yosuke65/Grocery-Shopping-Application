<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_add_new_address"
    android:padding="30dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_address_form"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/sign_up"
            android:textColor="@color/color_edit_text"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/edit_text_hint_name"
            android:textColor="@color/color_edit_text"
            android:textSize="12dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_edit_text"
            android:textColor="@color/color_edit_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/edit_text_hint_email"
            android:textColor="@color/color_edit_text"
            android:textSize="12dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_edit_text"

            android:textColor="@color/color_edit_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/edit_text_hint_mobile"
            android:textColor="@color/color_edit_text"
            android:textSize="12dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_edit_text"
            android:inputType="phone"
            android:textColor="@color/color_edit_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/edit_text_hint_password"
            android:textColor="@color/color_edit_text"
            android:textSize="12dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_edit_text"
            android:inputType="textEmailAddress"
            android:textColor="@color/color_edit_text" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_white_stroke"
            android:text="@string/sign_up"
            android:textColor="@android:color/white" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_anim_view_loading_register"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_loop="true"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            app:lottie_rawRes="@raw/splash_loading"/>
    </LinearLayout>
</RelativeLayout>