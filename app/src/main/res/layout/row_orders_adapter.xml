<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_image_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_product_order"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/darkGrey6" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_toRightOf="@+id/card_view_image_product"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_product_order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Qt: "
                    android:textColor="@color/darkGrey4"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/text_view_product_order_qt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="10"
                    android:textColor="@color/darkGrey4"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Ordered "
                    android:textColor="@color/darkGrey4"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/text_view_product_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="12/2/20"
                    android:textColor="@color/darkGrey4"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_product_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Delivered"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_info"
            android:background="@color/colorTransparentBlack3" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
